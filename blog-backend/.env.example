##############################
# Backend .env example (Nest)
##############################

# Core
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database & Cache
DATABASE_URL=postgres://monblog:monblogpassword@localhost:5432/monblog
REDIS_URL=redis://localhost:6379

# JWT/Auth
JWT_SECRET=changeme
JWT_EXPIRES_IN=1d

# Frontend integration (URLs utilisées dans les emails, redirections, CORS)
FRONTEND_URL=http://localhost:3001
# Liste d'origines autorisées pour CORS, séparées par des virgules
FRONTEND_ORIGINS=http://localhost:3001

# reCAPTCHA v2 (optionnel, laisser vide pour désactiver)
RECAPTCHA_SECRET_KEY=

# SMTP (dev par défaut via Ethereal; pour prod, renseigner vos infos SMTP réelles)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURITY=STARTTLS
SMTP_USER=
SMTP_PASS=

# Mail provider (mailjet|json|ethereal) — "json" écrit les emails au format JSON en dev
MAIL_PROVIDER=mailjet
MAILJET_API_KEY=
MAILJET_API_SECRET=
MAIL_FROM_NAME=Mon Blog
MAIL_FROM_EMAIL=no-reply@example.com

# Marque / Site
BLOG_NAME=Mon Blog

# Cookies/session (si utilisé par un middleware de session)
SESSION_COOKIE_SECURE=false

