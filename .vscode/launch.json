{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS Backend",
      "program": "${workspaceFolder}/blog-backend/src/main.ts",
      "cwd": "${workspaceFolder}/blog-backend",
      "runtimeArgs": ["-r", "ts-node/register"],
      "envFile": "${workspaceFolder}/blog-backend/.env",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "console": "integratedTerminal",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js Frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/blog-frontend",
      "envFile": "${workspaceFolder}/blog-frontend/.env",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "console": "integratedTerminal",
      "outputCapture": "std"
    }
  ]
}
